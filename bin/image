#!/bin/bash

DIR="$(dirname "$0")"
. "${DIR}/config"

export PROJECT_ID=$(gcloud config get-value project)

go mod tidy
go mod vendor

# cli
docker build -f ./docker/Dockerfile.service \
    -t "gcr.io/${PROJECT_ID}/${APP_NAME}-service:${IMAGE_VERSION}" .
docker push "gcr.io/${PROJECT_ID}/${APP_NAME}-service:${IMAGE_VERSION}"

# ui
docker build -f ./docker/Dockerfile.ui \
    -t "gcr.io/${PROJECT_ID}/${APP_NAME}-ui:${IMAGE_VERSION}" .
docker push "gcr.io/${PROJECT_ID}/${APP_NAME}-ui:${IMAGE_VERSION}"

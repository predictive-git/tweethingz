#!/bin/bash

DIR="$(dirname "$0")"
. "${DIR}/config"

export DB_INSTANCE_IP=$(gcloud sql instances describe ${SERVICE_NAME} \
    --format='value(ipAddresses[0].ipAddress)')

echo "Configuring 'tweethingz' schema in ${SERVICE_NAME} (${DB_INSTANCE_IP})..."

mysql --host $DB_INSTANCE_IP \
      --user root \
      --password=$(<"${CONF_DIR}/db_password") \
      tweethingz < etc/schema.ddl
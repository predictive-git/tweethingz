#!/bin/bash

# setup
export APP_NAME="twitterd"
export APP_REGION="us-central1"
export IMAGE_VERSION="0.4.2"
export DB_INSTANCE=${APP_NAME}
export DB_NODE_TIER="db-n1-standard-1"
export DB_NODE_ZONE="${APP_ZONE}-a"

# twitter
# export T_CONSUMER_KEY=""
# export T_CONSUMER_SECRET=""
# export T_ACCESS_TOKEN=""
# export T_ACCESS_SECRET=""

# T_OAUTH_CLIENT_ID=""
# T_OAUTH_CLIENT_SECRET=""
# T_OAUTH_FORCE_HTTPS=""

# derived
export DB_INSTANCE_IP=$(gcloud sql instances describe ${DB_INSTANCE} \
    --format='value(ipAddresses[0].ipAddress)')
export PROJECT_ID=$(gcloud config get-value project)
export DB_CONF_DIR="${HOME}/.cloud-sql/${PROJECT_ID}/${DB_INSTANCE}"
export APP_SA="${APP_NAME}@${PROJECT_ID}.iam.gserviceaccount.com"








